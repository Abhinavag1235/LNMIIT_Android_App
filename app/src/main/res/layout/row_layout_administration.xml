<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/admin_lettericon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle" />

                <TextView
                    android:id="@+id/admin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="sans-serif"
                android:text="Large Text"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="sans-serif"
                android:text="Small Text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/admin_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="sans-serif"
                android:text="Small Text"
                android:textSize="15dp" />

            <View
                android:id="@+id/admin_view"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@id/admin_email"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#D3D3D3"></View>

            <Button
                android:id="@+id/admin_email_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/ic_email" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>